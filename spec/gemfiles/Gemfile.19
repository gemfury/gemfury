source "http://rubygems.org"

# Pull runtime dependencies from Gemspec
gemspec :path => '../../'

# Lock rake
gem 'rake', '~> 12.0'

# Development dependencies
group :development do
  gem "webmock", "~> 2.3.0"
  gem "rspec", "~> 3.0"
  gem "multi_json"
  gem 'fakefs'
  gem "json", "< 2.3.0"

  # Restrict for Ruby 1.9 compatibility
  gem 'public_suffix', '< 1.5.0.pre'
  gem 'faraday', '< 0.12.0.pre'
end
